extends layout.pug

block variable
	-var login = true
	-var titleName = Login
	-var title = "Login"
	-var menuChecked = "Vobile login"

block header-login

	include include/header

block prepend main
	+b.MAIN.section-main
		section.mobile-page
			h3.heading-popup= title
			.height-36
			form
				.item--input-label
					.item--label
						label(for="login-user") Email or Username
						a(href="mobile--login-forgot-phone.html") Forgot?
					.item--input
						input(id="login-user")
				.item--input-label
					.item--label
						label(for="login-password") Password
						a(href="mobile--login-forgot.html") Forgot?
					.item--input
						input(id="login-password")
				.item--input-label
					label.checkbox-static
						input(type="checkbox", required="").checkbox-static--input
						p.checkbox-static--text Remember Me
				.item--input-label
					a(href="user.html").popup-button.button Login
				.text-center.wraps-mobile--bottom
