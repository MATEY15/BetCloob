extends layout.pug

block variable
	-var user = true
	-var titleName = Withdraw
	-var title = "Deposit"
	-var menuChecked = "Deposit"

block header-login

	include include/header

block prepend main
	+b.MAIN.section-main
		section.black-main
			.left-sidebar
				include include/menu/account-menu
			.main-container
				.heading--main-container
					h1.black-main--head= title

				include include/menu/mobile-menu

				.credit-card--drop
					span.arrow-default
					.head--credit-card
						.credit-card--name
							p Payment Method
						.payment-card
							img(src="img/credit-card--mc.svg", alt="")
							.payment-card--info
								p *4242
								span Credit Card

						.add-new--payment
							a(href="#").add-payment--items
								span.arrow-default
								.payment-card
									img(src="img/credit-card--mc.svg", alt="")
									.payment-card--info
										p *4242
										span Credit Card
							a(href="#").add-payment--items
								span.arrow-default
								.payment-card
									img(src="img/credit-card--visa.svg", alt="")
									.payment-card--info
										p *4242
										span Credit Card
							a(href="#").add-payment--items
								span.arrow-default
								.payment-card
									img(src="img/credit-card--paypal.svg", alt="")
									.payment-card--info
										p *4242
										span Credit Card
							a(href="#").add-payment--items
								span.arrow-default
								.payment-card
									img(src="img/credit-card--ame.svg", alt="")
									.payment-card--info
										p *4242
										span Credit Card
							a(href="#").add--payments-method
								<svg xmlns="http://www.w3.org/2000/svg" class="pluss-icon" width="12" height="12" viewBox="0 0 12 12"><g><g><path d="M0 5.5A.5.5 0 0 1 .5 5H5V.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5V5h4.5a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5H7v4.5a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5V7H.5a.5.5 0 0 1-.5-.5z"/></g></g></svg>
								| Add New Payment Method

					.main--credit-card
						.wrapper-show--animate.is-show
							form
								.credit-card--mobile-wrapper
									.payment--select-price
										label.radio--select-price
											input(type="radio" name="radio" required="")
											.text--select-price £50.00 
										label.radio--select-price
											input(type="radio" name="radio" required="")
											.text--select-price £100.00 
										label.radio--select-price
											input(type="radio" checked name="radio" required="")
											.text--select-price £200.00 

									.label-payment--fill
										span.icon-many £
										input(value="200").input-black.text-center
									.label-payment--fill
										label.default-label Deposit Bonus Code
										input.input-black
									.label-payment--fill
										label.checkbox-static
											input(type="checkbox", required="").checkbox-static--input
											p.checkbox-static--text I agree with the 
												a(href="terms-conditions.html") terms and conditions

								a(href="#popup-reciept").popup.popup-button.button Add £200.00 to my account