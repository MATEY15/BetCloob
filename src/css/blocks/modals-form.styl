.hidden
	display none

.mfp-close
	top 40px !important
	right 40px !important
	width 16px
	height 16px
	padding 0 !important
	opacity 1
	font-size 0
	&:before,
	&:after
		position absolute
		top 6px
		display block
		content ""
		width 16px
		height 2px
		background: cWhite
	&:before
		transform rotateZ(45deg)
	&:after
		transform rotateZ(-45deg)

.default-close
	position relative
	display block
	width 16px
	height 16px
	cursor pointer
	span
		position absolute
		top 6px
		display block
		width 16px
		height 2px
		background: cWhite
		&:nth-child(1)
			transform rotateZ(45deg)
		&:nth-child(2)
			transform rotateZ(-45deg)

