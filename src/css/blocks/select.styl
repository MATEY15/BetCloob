.custom-select 
	position relative
	ffa(fR)
	select 
		display none
.select-selected
	font-size 12px
	ffa(fR)
	color cWhite
	outline none
	cursor pointer
	padding-right 17px
	&.select-arrow-active 
		&:after
			transform rotate(-135deg)
			top 4px
	&:after 
		position absolute
		content ""
		top 1px
		right 0
		width 6px
		height 6px
		border-style: solid
		border-width: 0 2px 2px 0
		border-color: cWhite
		z-index 2
		pointer-events none
		transition all .25s ease-out
		transform rotate(45deg)
.select-items
	min-width 128px
	position absolute
	font-size 12px
	ffa(fR)
	ls(-0.09px)
	color cGrayD
	background cGraySelec
	top calc(100% + 25px)
	left -30px
	right 0
	z-index 99
	trn(.25s)
	box-shadow  0 5px 30px rgba(5, 5, 5, 0.35)
	opacity 1
	visibility visible
	padding 16px 20px 24px 30px
	div 
		c cGrayL
		padding 12px 0
		cursor pointer
		trn(.25s)
		&.same-as-selected 
			c cWhite
		&:hover 
			c cYellow
.select-hide
	top calc(100% + 45px)
	opacity 0
	visibility hidden