	.credit-card--edit
		&:not(:last-child)
			margin-bottom 8px

.credit-card--edit
	position relative
	background: cBlackD
	brr(10px)
	padding 48px 65px
	.payment-card
		justify-content space-between
		align-items center

.add-card
	margin 24px 0

.label-payment--fill
	position relative
	margin-bottom 30px
	.icon-many
		position absolute
		top 21px
		left 20px
		fsR(14px)
		c cWhite


// Animation Card

.wrapper-show--animate
	opacity 0
	visibility hidden
	perspective: 500px
	transform: rotateX(-20deg)
	animation: FadeOut .3s ease-in-out;
	&.is-show
		opacity 1
		visibility visible
		animation: FadeIn .3s ease-in-out;
		transform: rotateX(0deg)

@keyframes FadeIn
	0%
		opacity: 0
		visibility hidden
		transform: rotateX(-20deg)
	100%
		opacity: 1
		visibility visible
		transform: rotateX(0deg)

@keyframes FadeOut
	0%
		opacity: 1
		visibility visible
		transform: rotateX(0deg)
	99%
		opacity: 0
		visibility hidden
		transform: rotateX(-20deg)
	100%
		opacity: 0
		visibility hidden
		transform: rotateX(0deg)


